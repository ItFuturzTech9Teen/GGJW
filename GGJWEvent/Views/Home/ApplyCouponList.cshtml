
@{
    ViewBag.Title = "ApplyCouponList";
}

<script src="~/Js/GGJWEvemt/Services/HomeService.js"></script>
<script src="~/Js/GGJWEvemt/Controllers/ApplyCouponList.js"></script>
<div class="container-fluid">
    <!-- Breadcrumb-->
    <div class="row pt-2 pb-2">
        <div class="col-sm-9">
            <h4 class="page-title">Apply Coupon List</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javaScript:void();">GGJWEvent</a></li>
                <li class="breadcrumb-item"><a href="javaScript:void();">Masters</a></li>
                <li class="breadcrumb-item active" aria-current="page">Apply Coupon List</li>
            </ol>
        </div>
    </div>
    <!-- End Breadcrumb-->
    <div ng-controller="ApplyCouponListController">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h4 class="card-title" style="font-size:20px;">Apply Coupon List</h4>
                                    </div>
                                    <div class="col-md-4" style="padding-bottom:15px;">
                                        <input type="text" id="" class="form-control" placeholder="Search Here" ng-model="searchText" />
                                    </div>
                                    <div class="col-md-4" align="right">
                                        <a href="~/Reports/ApplyCouponListReport" class="btn btn-info btn-sm">Export To Excel</a>
                                    </div>
                                </div>
                                <div class="table-responsive" id="export">
                                    <table  class="table table-hover table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>SrNo</th>
                                                <th>ExhibitorName</th>
                                                <th>Coupon Price</th>
                                                <th>Total Coupon Price</th>
                                                <th>Total Coupon</th>
                                                <th>Assign Coupon</th>
                                                <th>Pending Coupon</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="data in ApplyCouponList | filter:searchText">
                                                <td>{{$index+1}}</td>
                                                <td>{{data.PersonName}}</td>
                                                <td>{{data.Price}}</td>
                                                <td>{{data.TotalPrice}}</td>
                                                <td>{{data.Total}}</td>
                                                <td>{{data.Assign}}</td>
                                                <td>{{data.Pending}}</td>
                                                <td>
                                                    <button type="button" ng-click="GetCoupon(data.Id)" class="btn btn-dark btn-sm" data-toggle="collapse" style="margin-right: 10px;" aria-expanded="true" data-target="#collapse-3" ><i class="fa fa-list-ol"></i></button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div id="collapse-3" class="collapse">
                        <div class="card-body">
                            <div class="table-responsive ">
                                <table class="table table-hover table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>SrNo</th>
                                            <th>Date</th>
                                            <th>Qty</th>
                                            <th>AssginBy</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="data in FulList">
                                            <td>{{$index+1}}</td>
                                            <td>{{data.Date}}</td>
                                            <td>{{data.Qty}}</td>
                                            <td>{{data.AssginBy}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/1.3.8/FileSaver.js"></script>