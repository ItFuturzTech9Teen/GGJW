
@{
    ViewBag.Title = "ExhibitorList";
}

<script src="~/Js/GGJWEvemt/Services/HomeService.js"></script>
<script src="~/Js/GGJWEvemt/Controllers/ExhibitorList.js"></script>

<div class="container-fluid">
    <!-- Breadcrumb-->
    <div class="row pt-2 pb-2">
        <div class="col-sm-9">
            <h4 class="page-title">ExhibitorList</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javaScript:void();">GGJWEvent</a></li>
                <li class="breadcrumb-item"><a href="javaScript:void();">Masters</a></li>
                <li class="breadcrumb-item active" aria-current="page">ExhibitorList</li>
            </ol>
        </div>
    </div>
    <!-- End Breadcrumb-->
    <div ng-controller="ExhibitorListController">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h4 class="card-title" style="font-size:20px;">ExhibitorList</h4>
                                    </div>
                                    <div class="col-md-4" style="padding-bottom:15px;">
                                        <input type="text" id="" class="form-control" placeholder="Search Here" ng-model="searchText" />
                                    </div>
                                    <div class="col-md-4" align="right">
                                        <a href="~/Reports/ExhibitorListReport" class="btn btn-info btn-sm">Export To Excel</a>
                                    </div>
                                </div>
                                <div class="table-responsive" id="export">
                                    <table class="table table-hover table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>SrNo</th>
                                                <th>Image</th>
                                                <th>PersonName</th>
                                                <th>CompanyName</th>
                                                <th>MobileNo</th>
                                                <th>Email</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="data in ExhibitorList | filter:searchText">
                                                <td>{{$index+1}}</td>
                                                <td><img src="{{data.Image}}" width="100px" /></td>
                                                <td>{{data.PersonName}}</td>
                                                <td>{{data.CompanyName}}</td>
                                                <td>{{data.MobileNo}}</td>
                                                <td>{{data.Email}}</td>
                                                <td>
                                                    <button type="button" ng-click="ExhibitorDetails(data)" class="btn btn-info btn-sm " data-toggle="modal" data-target="#modal"><i class="fa fa-list-ol"></i></button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="modal fade" id="modal">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">ExhibitorList</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h4 class="card-title" style="font-size:20px;">DATA</h4>
                                        </div>
                                    </div>
                                    <div class="table-responsive ">
                                        <table class="table table-hover table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Designation</th>
                                                    <th>TelephoneNo</th>
                                                    <th>Country</th>
                                                    <th>State</th>
                                                    <th>City</th>
                                                    <th>Address</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="e in ExhibitorDetailsList">
                                                    <td>{{e.Designation}}</td>
                                                    <td>{{e.TelephoneNo}}</td>
                                                    <td>{{e.Country}}</td>
                                                    <td>{{e.StateName}}</td>
                                                    <td>{{e.CityName}}</td>
                                                    <td>{{e.Address}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/1.3.8/FileSaver.js"></script>


