
@{
    ViewBag.Title = "ExhibitorList";
}

<script src="~/Js/GGJWEvemt/Services/HomeService.js"></script>
<script src="~/Js/GGJWEvemt/Controllers/ExhibitorList.js"></script>

<div class="container-fluid">
    <!-- Breadcrumb-->
    <div class="row pt-2 pb-2">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javaScript:void();"> Exhibitors</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Reports</li>
            </ol>
        </div>
    </div>
    <!-- End Breadcrumb-->
    <div ng-controller="ExhibitorListController">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-md-9">
                                        <h6 class="card-title">DATA</h6>
                                    </div>
                                    <div class="col-md-3" align="right">
                                        <a href="/Reports/ExhibitorListReport" class="btn btn-dark btn-sm">Export To Excel</a>
                                        <br /><br />
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table datatable="ng" dt-options="vm.dtOptions" class="table table-hover table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>NO</th>
                                                <th>Name</th>
                                                <th>Company Name</th>
                                                <th>MobileNo</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="data in ExhibitorList">
                                                <td>{{$index+1}}</td>
                                                <td>{{data.PersonName}}</td>
                                                <td>{{data.CompanyName}}</td>
                                                <td>{{data.MobileNo}}</td>
                                                <td>
                                                    <button type="button" class="btn btn-info btn-block btn-sm " ng-click="ExhibitorDetails(data)" data-toggle="modal" data-target="#modal"><i class="fa fa-eye"></i></button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="modal fade" id="modal">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">More Details</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="table-responsive ">
                                        <table class="table table-hover table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Image</th>
                                                    <th>Email</th>
                                                    <th>Designation</th>
                                                    <th>TelephoneNo</th>
                                                    <th>Country</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="e in ExhibitorDetailsList">
                                                    <td><img src="{{e.Image}}" width="100px" /></td>
                                                    <td>{{e.Email}}</td>
                                                    <td>{{e.Designation}}</td>
                                                    <td>{{e.TelephoneNo}}</td>
                                                    <td>{{e.Country}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="table-responsive ">
                                        <table class="table table-hover table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Address</th>
                                                    <th>Lat-Long</th>
                                                    <th>State</th>
                                                    <th>City</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="e in AddressListNew">
                                                    <td>{{e.Address}}</td>
                                                    <td>{{e.Latlong}}</td>
                                                    <td>{{e.StateName}}</td>
                                                    <td>{{e.CityName}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/1.3.8/FileSaver.js"></script>


