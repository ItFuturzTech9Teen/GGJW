
@{
    ViewBag.Title = "ExhibitorOffer";
}

<script src="~/Js/GGJWEvemt/Services/HomeService.js"></script>
<script src="~/Js/GGJWEvemt/Controllers/ExhibitorOffer.js"></script>
<script src="~/Js/jquery.table2excel.js"></script>
<div class="container-fluid">
    <!-- Breadcrumb-->
    <div class="row pt-2 pb-2">
        <div class="col-sm-9">
            <h4 class="page-title">Exhibitor Offer</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javaScript:void();">GGJWEvent</a></li>
                <li class="breadcrumb-item"><a href="javaScript:void();">Masters</a></li>
                <li class="breadcrumb-item active" aria-current="page">Exhibitor Offer</li>
            </ol>
        </div>
    </div>
    <!-- End Breadcrumb-->
    <div ng-controller="ExhibitorOfferController">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h4 class="card-title" style="font-size:20px;">DATA</h4>
                                    </div>
                                </div>
                                <div class="table-responsive ">
                                    <table datatable="ng" dt-options="vm.dtOptions" class="table table-hover table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>SrNo</th>
                                                <th>Image</th>
                                                <th>OfferName</th>
                                                <th>Exhibitor Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="data in ExhibitorOfferList">
                                                <td>{{$index+1}}</td>
                                                <td><img src="{{data.Image}}" alt="Alternate Text" width="100" /></td>
                                                <td>{{data.OfferName}}</td>
                                                <td>{{data.ExhibitorName}}</td>
                                                <td>
                                                    <button type="button" class="btn btn-danger btn-sm " ng-click="DeleteExhibitorOffer(data.Id)"><i class="fa fa-trash"></i></button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


