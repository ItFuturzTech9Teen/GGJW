
@{
    ViewBag.Title = "RequestCoupon";
}

<script src="~/Js/GGJWEvemt/Services/HomeService.js"></script>
<script src="~/Js/GGJWEvemt/Controllers/RequestCoupon.js"></script>
<div class="container-fluid">
    <!-- Breadcrumb-->
    <div class="row pt-2 pb-2">
        <div class="col-sm-9">
            <h4 class="page-title">Requested Coupon</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javaScript:void();">GGJWEvent</a></li>
                <li class="breadcrumb-item"><a href="javaScript:void();">Masters</a></li>
                <li class="breadcrumb-item active" aria-current="page">Requested Coupon</li>
            </ol>
        </div>
    </div>
    <!-- End Breadcrumb-->
    <div class="row" ng-controller="RequestCouponController">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4><b>DATA</b></h4>
                    <div class="table-responsive ">
                        <table datatable="ng" dt-options="vm.dtOptions" class="table table-hover table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>SrNo</th>
                                    <th>ExhibitorName</th>
                                    <th>Qty</th>
                                    <th>Note</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="data in RequestCouponList">
                                    <td>{{$index+1}}</td>
                                    <td>{{data.PersonName}}</td>
                                    <td>{{data.Qty}}</td>
                                    <td>{{data.Note}}</td>
                                    <td>
                                        <button type="button" class="btn btn-info btn-sm " ng-click="GetRequestCouponList(data)"><i class="fa fa-pencil-square-o"></i></button>
                                        <button type="button" class="btn btn-danger btn-sm " ng-click="DeleteRequestCoupon(data.Id)"><i class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


