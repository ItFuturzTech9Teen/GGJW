
@{
    ViewBag.Title = "RequestAndAssign";
}

<script src="~/Js/GGJWEvemt/Services/HomeService.js"></script>
<script src="~/Js/GGJWEvemt/Controllers/RequestAssign.js"></script>

<div class="container-fluid">
    <!-- Breadcrumb-->
    <div class="row pt-2 pb-2">
        <div class="col-sm-12">
            <h4 class="page-title">Request & Assign</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Request & Assign</li>
            </ol>
        </div>
    </div>
    <!-- End Breadcrumb-->
    <div class="row" ng-controller="RequestAssignContoller">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-primary">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabe-1" ng-click="pendingCoupons"><i class="icon-home"></i> <span class="hidden-xs">Pending Coupon Requests</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabe-2" ng-click="assignCoupons"><i class="icon-user"></i> <span class="hidden-xs">Coupon Assigned</span></a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div id="tabe-1" class="container tab-pane active">
                           
                            <h4><b>DATA</b></h4>
                            <div class="table-responsive ">
                                <table datatable="ng" dt-options="vm.dtOptions" class="table table-hover table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>SrNo</th>
                                            <th>ExhibitorName</th>
                                            <th>Qty</th>
                                            <th>Note</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="data in RequestCouponList">
                                            <td>{{$index+1}}</td>
                                            <td>{{data.PersonName}}</td>
                                            <td>{{data.Qty}}</td>
                                            <td>{{data.Note}}</td>
                                            <td>
                                                <button type="button" class="btn btn-info btn-sm " ng-click="UpdateRequest(data)"><i class="fa fa-refresh"></i></button>
                                                <button type="button" class="btn btn-danger btn-sm " ng-click="DeleteRequestCoupon(data.Id)"><i class="fa fa-trash"></i></button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                             
                        </div>
                        <div id="tabe-2" class="container tab-pane fade">
                            <h4><b>DATA</b></h4>
                            <div class="table-responsive ">
                                <table datatable="ng" dt-options="vm.dtOptions" class="table table-hover table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>SrNo</th>
                                            <th>ExhibitorName</th>
                                            <th>Qty</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="data in RequestAssign">
                                            <td>{{$index+1}}</td>
                                            <td>{{data.PersonName}}</td>
                                            <td>{{data.Qty}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
